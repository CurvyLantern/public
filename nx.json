{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "defaultProject": "api",
  "generators": {
    "@nrwl/express": {
      "application": {
        "linter": "eslint"
      },
      "library": {
        "linter": "eslint"
      }
    },
    "@nrwl/nx-plugin": {
      "plugin": {
        "linter": "eslint"
      }
    },
    "@nx/cypress": {
      "cypress-project": {
        "linter": "eslint"
      }
    },
    "@nx/nest": {
      "application": {
        "linter": "eslint"
      }
    },
    "@nx/next": {
      "application": {
        "linter": "eslint",
        "style": "scss"
      }
    },
    "@nx/node": {
      "application": {
        "linter": "eslint"
      },
      "library": {
        "linter": "eslint"
      }
    },
    "@nx/react": {
      "application": {
        "babel": true,
        "bundler": "webpack",
        "linter": "eslint",
        "style": "css"
      },
      "component": {
        "style": "css"
      },
      "library": {
        "linter": "eslint",
        "style": "css",
        "unitTestRunner": "jest"
      },
      "storybook-configuration": {
        "linter": "eslint"
      }
    },
    "@nx/web": {
      "application": {
        "linter": "eslint"
      }
    },
    "@nx/web:application": {
      "e2eTestRunner": "cypress",
      "linter": "eslint",
      "style": "css",
      "unitTestRunner": "jest"
    },
    "@nx/web:library": {
      "linter": "eslint",
      "style": "css",
      "unitTestRunner": "jest"
    },
    "@nx/workspace": {
      "library": {
        "linter": "eslint"
      }
    }
  },
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "sharedGlobals"
    ],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/src/test-setup.[jt]s"
    ],
    "sharedGlobals": [
      "{workspaceRoot}/babel.config.json"
    ]
  },
  "parallel": 1,
  "plugins": [
    {
      "options": {
        "buildTargetName": "build",
        "exportTargetName": "export",
        "installTargetName": "install",
        "prebuildTargetName": "prebuild",
        "runAndroidTargetName": "run-android",
        "runIosTargetName": "run-ios",
        "serveTargetName": "serve",
        "startTargetName": "start",
        "submitTargetName": "submit"
      },
      "plugin": "@nx/expo/plugin"
    }
  ],
  "pluginsConfig": {
    "@nrwl/js": {
      "analyzeSourceFiles": true
    }
  },
  "targetDefaults": {
    "@nx/eslint:lint": {
      "cache": true,
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.json"
      ]
    },
    "@nx/expo:build": {
      "cache": true,
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "production",
        "^production"
      ]
    },
    "@nx/jest:jest": {
      "cache": true,
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      },
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/jest.preset.js"
      ],
      "options": {
        "passWithNoTests": true
      }
    },
    "build": {
      "cache": true,
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "production",
        "^production"
      ]
    },
    "e2e": {
      "cache": true,
      "inputs": [
        "default",
        "^production"
      ]
    }
  },
  "tasksRunnerOptions": {
    "default": {
      "options": {},
      "runner": "@nx/workspace/tasks-runners/default"
    }
  },
  "useInferencePlugins": false
}